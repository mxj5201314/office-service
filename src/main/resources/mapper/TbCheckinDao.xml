<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhouzhao.office.online_collaborative_office.dao.TbCheckinDao">

    <resultMap type="com.zhouzhao.office.online_collaborative_office.entity.TbCheckin" id="TbCheckinMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="country" column="country" jdbcType="VARCHAR"/>
        <result property="province" column="province" jdbcType="VARCHAR"/>
        <result property="city" column="city" jdbcType="VARCHAR"/>
        <result property="district" column="district" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="risk" column="risk" jdbcType="INTEGER"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="checkMode" column="check_mode" jdbcType="INTEGER"/>
    </resultMap>

    <select id="haveCheckIn" parameterType="com.zhouzhao.office.online_collaborative_office.vo.ValidCheckinVO"
            resultType="integer">
        SELECT id
        FROM tb_checkin
        WHERE user_id = #{userId}
          AND date = CURRENT_DATE
          AND create_time BETWEEN #{startTime} AND #{endTime}
        LIMIT 1;

    </select>

    <select id="getCheckinTotalByUserId" parameterType="string" resultType="integer">
        select count(distinct date)
        from tb_checkin
        where user_id = #{userId}
    </select>

    <select id="getWeekCheckin"  resultType="com.zhouzhao.office.online_collaborative_office.entity.TbCheckin">
        SELECT date,
               status
        FROM tb_checkin
        WHERE user_id = #{userId}
          AND date BETWEEN #{startDate} AND #{endDate}
    </select>

</mapper>

