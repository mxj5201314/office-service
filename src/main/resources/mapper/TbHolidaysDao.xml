<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhouzhao.office.online_collaborative_office.dao.TbHolidaysDao">

    <resultMap type="com.zhouzhao.office.online_collaborative_office.entity.TbHolidays" id="TbHolidaysMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="date" column="date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="searchTodayIsHolidays" resultType="Integer">
        select `id`
        from `tb_holidays`
        where `date` = CURRENT_DATE
    </select>

    <select id="getHolidaysInRange" resultType="String">
        SELECT date
        FROM tb_holidays
        WHERE date BETWEEN #{startDate} AND #{endDate}
    </select>


</mapper>

